# Crear .gitignore
cat > .gitignore << EOF
# Logs
logs
*.log
npm-debug.log

# Dependency directories
node_modules/
bower_components/

# Environment
.env
.env.local
.env.*.local

# Build directory
build/
dist/

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Temporary files
*~
*.tmp
EOF
